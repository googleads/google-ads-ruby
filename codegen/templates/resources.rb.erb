module Google
  module Ads
    module GoogleAds
      module Factories
        module Resources
          <% resources.each do |res, path| %>
          # Returns a new instance of <%= res.name.split("::").last %>, optionally
          # yielding it to a passed block so that attributes can be set on it.
          #
          # @yield [<%= res.name %>] the new instance that is returned so attributes
          #  can be set
          # @return [<%= res.name %>] the created resource
          def self.<%= res.name.split("::").last.underscore %>
            require "<%= path.split("google-ads-ruby/lib/").last %>"
            res = <%= res.name %>.new
            yield res if block_given?
            res
          end
          <% end %>
        end
      end
    end
  end
end
